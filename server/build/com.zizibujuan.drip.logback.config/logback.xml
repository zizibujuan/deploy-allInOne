<configuration>
  <!-- See documentation at http://logback.qos.ch/manual/joran.html -->
  

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
    </layout>
  </appender>

  
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>drip.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <!-- daily rollover -->
      <!-- FIXME: dd表示的时间比真实日期少一天 -->
      <fileNamePattern>drip.%d{yyyy-MM-dd}.log</fileNamePattern>

      <!-- keep 30 days' worth of history -->
      <maxHistory>30</maxHistory>
    </rollingPolicy>

    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Prints information on locating and reading the server configuration file -->
  <!-- common -->
  <logger name="com.chinairi.server.util" level="DEBUG"/>
  <logger name="com.chinairi.dbaccess.oracle" level="DEBUG"/>
  
  <!-- cm -->
  <logger name="com.chinairi.cm.server.servlets" level="DEBUG"/>
  <logger name="com.chinairi.cm.server.dao.oracle" level="DEBUG"/>
  <logger name="com.chinairi.cm.server.service.impl" level="DEBUG"/>
  
  <!-- useradmin -->
  <logger name="com.chinairi.system.server.servlets" level="DEBUG"/>
  <logger name="com.chinairi.system.server.dao.oracle" level="DEBUG"/>
  <logger name="com.chinairi.system.server.service.impl" level="DEBUG"/>
  
  <!-- doc -->
  <logger name="com.chinairi.pm.server.servlets" level="DEBUG"/>
  <logger name="com.chinairi.pm.server.dao.oracle" level="DEBUG"/>
  <logger name="com.chinairi.pm.server.service.impl" level="DEBUG"/>

  <root level="WARN">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </root>
</configuration>